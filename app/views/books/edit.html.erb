<h1>Editing Book</h1>

<%= form_with model:@book,url:update_book_path, local:true do |f| %>
<from>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
  <%= f.submit 'Update Book' %>
  </div>
</from>
<% end %>

<%= link_to "Show", show_book_path(@book.id) %>
